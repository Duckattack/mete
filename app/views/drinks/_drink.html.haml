- path = deposit_user_path(@user, :amount => drink.price.to_f * 100 * -1) if @user

.col-xs-6.col-sm-4.col-md-2.col-lg-2
  = link_to path || '#' do
    .panel.panel-default.text-center
      .panel-header
        %h6= drink.name
      .panel-body
        = image_tag drink.logo(:thumb), alt: drink.name
      .panel-footer
        = humanized_money_with_symbol drink.price

