- model_class = Drink
- content_for :actions do
  %li
    = link_to 'new drink', [:new, :drink]
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:logo)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:bottle_size)
      %th= model_class.human_attribute_name(:caffeine)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:created_at)
  %tbody
    - @drinks.each do |drink|
      %tr
        %td
          = link_to [:edit, drink] do
            = image_tag(drink.logo.url :thumb)
        %td= drink.name
        %td= drink.bottle_size
        %td= drink.caffeine
        %td= humanized_money_with_symbol drink.price
        %td
          %span{ :title => l(drink.created_at)}= l(drink.created_at, format: :short)
