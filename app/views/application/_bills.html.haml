- [5,10,20,50].each do |n|
  - path = deposit_user_path(@user, :amount => n * 100) if @user
  .col-xs-12.col-sm-6.col-md-3.col-lg-2
    = link_to path || '#' do
      .panel.panel-default.text-center
        .panel-body
          = image_tag "euro-#{n}.png", alt: m(n)
        .panel-footer
          +
          =m n
